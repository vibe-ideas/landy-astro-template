<footer>
  <!-- Main Footer Section -->
  <section class="footer-section">
    <div class="container">
      <div class="footer-grid">
        <!-- Contact Column -->
        <div class="footer-column">
          <h3 class="footer-language">Contact</h3>
          <h4 class="footer-large">Tell us everything</h4>
          <p class="footer-para">
            Do you have any question? Feel free to reach out.
          </p>
          <a href="mailto:l.qqbadze@gmail.com" class="footer-chat">
            Let's Chat
          </a>

          <!-- Address Section -->
          <div class="address-section">
            <h3 class="footer-language">Address</h3>
            <p class="footer-para">Rancho Santa Margarita</p>
            <p class="footer-para">2131 Elk Street</p>
            <p class="footer-para">California</p>
          </div>
        </div>

        <!-- Policy Column -->
        <div class="footer-column">
          <h3 class="footer-title">Policy</h3>
          <a href="/" class="footer-large-link">Application Security</a>
          <a href="/" class="footer-large-link">Software Principles</a>

          <!-- Company Section -->
          <div class="company-section">
            <h3 class="footer-title">Company</h3>
            <a href="/" class="footer-large-link">About</a>
            <a href="/" class="footer-large-link">Blog</a>
            <a href="/" class="footer-large-link">Press</a>
            <a href="/" class="footer-large-link">Careers & Culture</a>
          </div>
        </div>

        <!-- Support Column -->
        <div class="footer-column">
          <a href="/" class="footer-large-link">Support Center</a>
          <a href="/" class="footer-large-link">Customer Support</a>

          <!-- Language Switcher -->
          <div class="language-section">
            <label class="footer-label">Language</label>
            <div class="language-switch-container">
              <button class="language-switch" data-lang="en">
                <img 
                  src="/img/svg/united-states.svg" 
                  alt="English" 
                  width="30" 
                  height="30" 
                />
              </button>
              <button class="language-switch" data-lang="es">
                <img 
