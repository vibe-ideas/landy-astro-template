</footer>

<style>
  .footer-section {
    background: #f8f9fb;
    padding: 5rem 0 3rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 2fr 1.5fr;
    gap: 4rem;
    margin-bottom: 3rem;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-language {
    font-size: 1rem;
    font-weight: 700;
    color: #18216d;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
  }

  .footer-title {
    font-size: 1rem;
    font-weight: 700;
    color: #18216d;
    margin-bottom: 1rem;
    text-transform: uppercase;
  }

  .footer-large {
    font-size: 2.5rem;
    font-weight: 600;
    color: #18216d;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .footer-large-link {
    font-size: 1rem;
    color: #18216d;
    text-decoration: none;
    margin-bottom: 0.75rem;
    transition: color 0.3s ease;
    font-weight: 500;
  }

  .footer-large-link:hover {
    color: #2c3e95;
  }

  .footer-para {
    font-size: 1rem;
    color: #18216d;
    line-height: 1.6;
    margin-bottom: 0.5rem;
  }

  .footer-chat {
    background: #18216d;
    color: white;
    padding: 12px 30px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 500;
    display: inline-block;
    margin-top: 1rem;
    transition: all 0.3s ease;
    font-size: 1rem;
  }

  .footer-chat:hover {
    background: #2c3e95;
    transform: translateY(-2px);
  }

  .address-section {
    margin-top: 3rem;
  }

  .company-section {
    margin-top: 3rem;
  }

  .language-section {
    margin-top: 2rem;
  }

  .footer-label {
    font-size: 1rem;
    font-weight: 700;
    color: #18216d;
    text-transform: uppercase;
    display: block;
    margin-bottom: 1rem;
  }

  .language-switch-container {
    display: flex;
    gap: 0.5rem;
  }

  .language-switch {
    background: none;
    border: 2px solid transparent;
    border-radius: 50%;
    padding: 5px;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .language-switch:hover {
    border-color: #18216d;
    transform: scale(1.1);
  }

  .language-switch.active {
    border-color: #18216d;
  }

  /* Bottom Footer */
  .footer-extra {
    background: #f8f9fb;
    padding: 0 0 3rem;
  }

  .border-top {
    border-top: 1px solid rgba(24, 33, 109, 0.1);
    padding-top: 3rem;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
  }

  .footer-logo {
    transition: transform 0.3s ease;
  }

  .footer-logo:hover {
    transform: scale(1.05);
  }

  .footer-social {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(24, 33, 109, 0.1);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    background: #18216d;
    transform: translateY(-2px);
  }

  .social-link:hover img {
    filter: brightness(0) invert(1);
  }

  .kofi-link {
    transition: transform 0.3s ease;
  }

  .kofi-link:hover {
    transform: translateY(-2px);
  }

  .kofi-link img {
    height: 36px;
    border: 0;
  }

  /* Responsive Design */
  @media (max-width: 992px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
    }

    .footer-column:nth-child(3) {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 768px) {
    .footer-section {
      padding: 4rem 0 2rem;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-large {
      font-size: 2rem;
    }

    .footer-bottom {
      flex-direction: column;
      text-align: center;
      gap: 2rem;
    }

    .address-section,
    .company-section {
      margin-top: 2rem;
    }

    .language-section {
      margin-top: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .footer-social {
      flex-wrap: wrap;
      justify-content: center;
    }
  }
</style>

<script>
  // Language switcher functionality (placeholder)
  document.addEventListener('DOMContentLoaded', function() {
    const languageSwitches = document.querySelectorAll('.language-switch');
    
    languageSwitches.forEach(switch_ => {
      switch_.addEventListener('click', function() {
        // Remove active class from all switches
        languageSwitches.forEach(s => s.classList.remove('active'));
        // Add active class to clicked switch
        this.classList.add('active');
        
        const lang = this.getAttribute('data-lang');
        console.log(`Language switched to: ${lang}`);
        // TODO: Implement actual language switching functionality
      });
    });

    // Set default language (English)
    const defaultLang = document.querySelector('.language-switch[data-lang="en"]');
    if (defaultLang) {
      defaultLang.classList.add('active');
    }
  });
</script>
